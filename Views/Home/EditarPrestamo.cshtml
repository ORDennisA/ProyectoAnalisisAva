﻿<table class="table table-condensed">
    <tr>
        <th>Id_Prestamo</th>
        <th>FechaDeSalida</th>
        <th>FechaMaximaDeDevolucion</th>
        <th>FechaDeDevolucion</th>
        <th>Id_Usuarios</th>
        <th>Id_Tipo_de_Prestamo</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="row-@item.id_Prestamo">
            <td> @item.id_Prestamo</td>
            <td> @item.FechaDeSalida</td>
            <td> @item.FechaMaximaDeDevoluacion</td>
            <td> @item.FechaDeDevolucion</td>
            <td> @item.id_Usuarios</td>
            <td> @item.id_Tipo_de_prestamos</td>
            <td>
                <button type="button" class="btn btn-primary" onclick="prepareEditRow(@item.id_Prestamo)">Editar</button>
                <button type="button" class="btn btn-danger" onclick="deleteRow(@item.id_Prestamo)">Eliminar</button>
            </td>
        </tr>
    }

</table>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div id="editVentasModal" class="row">
    <div class="modal-content">
        <form>
            <div class="col-md-3">
                <Label>id_Prestamo</Label>
                <input type="number" id="id_Prestamo" name="id_Prestamo" class="form-control" />
            </div>
            <div class="col-md-3">
                <Label>FechaDeSalida</Label>
                <input type="date" id="FechaSal" name="FechaSal" class="form-control" />
            </div>
            <div class="col-md-3">
                <Label>FechaMaximaDeDevolucion</Label>
                <input type="date" id="FechaMaxDev" name="FechaMaxDev" class="form-control" />
            </div>
            <div class="col-md-3">
                <Label>FechaDeDevolucion</Label>
                <input type="date" id="FechaDev" name="FechaDev" class="form-control" />
            </div>
            <div class="col-md-3">
                <Label>id_Usuarios</Label>
                <input type="text" id="idUsuario" name="idUsuario" class="form-control" />
            </div>
            <div class="col-md-3">
                <Label>id_Tipo_de_prestamos</Label>
                <input type="date" id="idTipoPrestamo" name="idTipoPrestamo" class="form-control" />
            </div>
            <input type="button" onclick="editRow()" value="Guardar cambios">
        </form>
    </div>
</div>
<script>
    function deleteRow(id) {
        // Realizar petición AJAX al controlador de Home para eliminar el usuario con el ID proporcionado
        if (confirm('¿Estás seguro de que deseas eliminar este prestamo?')) {
            $.ajax({
                url: '/Home/DeletePrestamo',
                type: 'POST',
                data: { id: id },
                success: function () {
                    // Si la operación es exitosa, actualizar la tabla sin recargar la página
                    $('#row-' + id).remove();
                },
                error: function (xhr, textStatus, errorThrown) {
                    // Si la operación falla, mostrar un mensaje de error
                    alert('Error al eliminar prestamo.');
                }
            });
        }
    }
    function prepareEditRow(id) {
        // Get user data using id from selected row
        $.ajax({
            url: '/Home/GetPrestamo',
            type: 'GET',
            data: { id: id },
            // if successful, function in controller returns a json data object
            // Then fill this data to the edit form, to be edited
            success: function (data, status) {
                document.getElementById("id_Prestamo").value = data.id_Prestamo;
                document.getElementById("FechaSal").value = data.FechaSal;
                document.getElementById("FechaMaxDev").value = data.FechaMaxDev;
                document.getElementById("FechaDev").value = data.FechaDev;
                document.getElementById("idUsuario").value = data.idUsuario;
                document.getElementById("idTipoPrestamo").value = data.idTipoPrestamo;
            },
            error: function () {
                alert('Error al preparar datos de prestamo para editarse.');
            }
        });
    }
    // This is due by Friday. Work on it Caleb!
    function editRow() {
        $.ajax({
            url: '/Home/SaveEditedPrestamo',
            type: 'POST',
            async: true,
            data: {
                id_Prestamo: document.getElementById("id_Prestamo").value = data.id_Prestamo,
                FechaSal: document.getElementById("FechaSal").value = data.FechaSal,
                FechaMaxDev: document.getElementById("FechaMaxDev").value = data.FechaMaxDev,
                FechaDev: document.getElementById("FechaDev").value = data.FechaDev,
                idUsuario: document.getElementById("idUsuario").value = data.idUsuario,
                idTipoPrestamo: document.getElementById("idTipoPrestamo").value = data.idTipoPrestamo,
            },
            success: function () {
                alert('Edicion exitosa');
            },
            error: function () {
                alert('Error al editar prestamo');
            }
        });
        limpiarFormulario();
    }
    function limpiarFormulario() {
        document.getElementById("id_Prestamo").value = "";
        document.getElementById("FechaSal").value = "";
        document.getElementById("FechaMaxDev").value = "";
        document.getElementById("FechaDev").value = "";
        document.getElementById("idUsuario").value = "";
        document.getElementById("idTipoPrestamo").value = "";
    }
</script>
